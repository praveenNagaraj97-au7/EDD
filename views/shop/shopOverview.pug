extends ../base

block content
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    link(rel="stylesheet", href="/styles/carOverView.css")
    
    div(class="row")
        for each in products
            div(class="col-sm-6 col-md-4")
                div(class="card")
                    div(class="card-image" style=`background : url('${each.productImages[0]}');background-size: cover;/* margin-top: 3px; *//* border-bottom-left-radius: 28px; */border-radius: 10px;`)
                    div(class="card-text")
                        span(class="date")=each.modelYear
                        h2(id="header-name")=each.partName
                        hr
                        h5=each.carModel + ' ' + each.carVarient
                        h5=each.productQuality
                        h5 â‚¹
                            =each.partPrice
                    
                    div(style="text-align:center")
                            a( class="btn btn-primary" href=`/v1/ExploreDreamDiscover/buyparts/part:${each.slug}` role="button") View

    nav(aria-label="Page navigation example")
        
        ul(class="pagination justify-content-center")
            -var page = 1;
            while page < pages+1
                li(class="page-item")
                a(class="page-link" href=`/v1/ExploreDreamDiscover/rentcar?page=${page}`)=page++
    