include ../header

block content
        link(rel="stylesheet", href="/styles/signup.css")
        form(action="/v1/ExploreDreamDiscover/signUp" method="POST")
            h1 Sign Up

            label(for="name") Name:
            input(type="text" id="name" placeholder="Enter Username" name="username" required)

            label(for="mail") Email:
            input(type="email" id="mail" placeholder="Enter Email" name="email" required)

            label(for="mail") Phone Number:
            input(type="text" id="phone" placeholder="Enter Phone Number" name="phone" required)
            
            label(for="password") Password:
            input(type="password" id="password" placeholder="Enter Password" name="password" required)

            label(for="password") Confirm Password:
            input(type="password" id="confirmpassword" placeholder="Confirm Password" name="confirmPassword" required)

            button(type="submit") Sign Up!

            p(id="errlog")
            a(href="/v1/ExploreDreamDiscover/login") Have Account? Login
            h5(id="loggedStatus")
        
            script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.js")
            script(src="/js/signUp.js")